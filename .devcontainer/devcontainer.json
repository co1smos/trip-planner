{
  "name": "trip-agent",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/workspaces/trip-planner",
  "forwardPorts": [8000],
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefault": true, // 这一行会将系统默认shell改为zsh
      "installOhMyZsh": true,
      "username": "vscode"
    }
  },
  "postCreateCommand": "python3 -m venv .venv && . .venv/bin/activate && python -m pip install --upgrade pip && pip install -r requirements.txt && bash .devcontainer/setup-shell.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "terminal.integrated.splitCwd": "inherited",
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "basic",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "redhat.vscode-yaml",
        "editorconfig.editorconfig",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
		    "ms-azuretools.vscode-containers"
      ]
    }
  }
}
